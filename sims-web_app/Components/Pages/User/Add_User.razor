
@page "/Add_User"
@using RestSharp;
@using System.Text.Json;
@using sims_web_app.Data.Model
@using sims_web_app.Data.Model.Enum
@using sims_web_app.Services
@using Blazored.LocalStorage
@using MudBlazor

@inject ILocalStorageService LocalStorage
@inject ISnackbar Snackbar
@inject NavigationManager Nav

<PageTitle>Add User</PageTitle>

<MudForm @ref="form" OnValidSubmit="SubmitUser">
    <MudText Typo="Typo.h3" GutterBottom="true">Add New User</MudText>
    <MudText Typo="Typo.body1" Class="mb-8">You can add a new user here.</MudText>
    <MudTextField @bind-Value="newUser.FirstName" Label="First Name" Variant="Variant.Outlined"></MudTextField>
    <MudTextField @bind-Value="newUser.LastName" Label="Last Name" Variant="Variant.Outlined"></MudTextField>
    <MudTextField @bind-Value="newUser.Email" Label="Email Address" Variant="Variant.Outlined"></MudTextField>

    <div class="d-flex">
        <MudTextField @bind-Value="newUser.Password" Label="Password" Variant="Variant.Outlined" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="ButtonTestclick" AdornmentAriaLabel="Show Password" />
    </div>

    <MudGrid>
        <MudItem xs="12">
            <MudField Label="Select a Role" Variant="Variant.Outlined" InnerPadding="false">
                <MudRadioGroup T="string" @bind-Value="newUser.Role" Label="Role">
                    <MudRadio T="string">Admin</MudRadio>
                    <MudRadio T="string">User</MudRadio>
                
                </MudRadioGroup>
            </MudField>
        </MudItem>
    </MudGrid>

    <MudButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" StartIcon="@Icons.Material.Filled.Save" Color="Color.Info" Size="Size.Medium">Save</MudButton>
</MudForm>

@code {

    private MudForm form;
    private Data.Model.User newUser = new ();

    //Password field
    public string Password { get; set; } = "";

    bool isShow;
    InputType PasswordInput = InputType.Password;
    string PasswordInputIcon = Icons.Material.Filled.VisibilityOff;

    void ButtonTestclick()
    {
        @if (isShow)
        {
            isShow = false;
            PasswordInputIcon = Icons.Material.Filled.VisibilityOff;
            PasswordInput = InputType.Password;
        }
        else
        {
            isShow = true;
            PasswordInputIcon = Icons.Material.Filled.Visibility;
            PasswordInput = InputType.Text;
        }
    }

    private async Task SubmitUser()
    {
        //Validate form 
        if (form is not null)
        {
            await form.Validate();
            if (!form.IsValid)
                return;
        }

        if (string.IsNullOrWhiteSpace(newUser.FirstName) ||
            string.IsNullOrWhiteSpace(newUser.LastName) ||
            string.IsNullOrWhiteSpace(newUser.Email) ||
            string.IsNullOrWhiteSpace(newUser.Password) ||
            string.IsNullOrWhiteSpace(newUser.Role))
        {
            Snackbar.Add("Please fill all fields and select a role.", Severity.Warning);
            return;
        }

        //Get JWT token from local storage 
        var token = await LocalStorage.GetItemAsync<string>("authToken");
        if (string.IsNullOrWhiteSpace(token))
        {
            Snackbar.Add("You are not logged in or your session has expired.", Severity.Error);
            return;
        }

        //Map Rolw string (Admin/User) to "Role" (should mutch DB!)
        int? roleId = newUser.Role == "Admin" ? 1 : 2; // ⚠️ adjust if your DB uses different IDs

        try
        {
            var client = new RestClient("http://localhost:5089"); // API base URL
            var request = new RestRequest("/api/Users/create", Method.Post);

            request.AddHeader("Authorization", $"Bearer {token}");

            // Match backend CreateUserRequest
            request.AddJsonBody(new
            {
                Firstname = newUser.FirstName,
                Lastname = newUser.LastName,
                Email = newUser.Email,
                RoleId = roleId,
                Password = newUser.Password
            });

            var response = await client.ExecuteAsync(request);

            if (!response.IsSuccessful)
            {
                Snackbar.Add($"Failed to create user: {response.Content}", Severity.Error);
                return;
            }

            Snackbar.Add("User successfully created.", Severity.Success);

            // Reset form
            newUser = new User();
            if (form is not null)
                await form.ResetAsync();
        }

        catch (Exception ex)
        {
            Console.Error.WriteLine(ex);
            Snackbar.Add("An unexpected error occurred while creating the user.", Severity.Error);
        }
      
    }
}

