
@page "/New_Ticket"

<PageTitle>New Ticket</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Create New Ticket</MudText>

<MudText Typo="Typo.body1" Class="mb-8">You can create a new incident Ticket here.</MudText>


<MudTextField @bind-Value="TextValue" Label="Subject" Variant="Variant.Outlined"></MudTextField>

@code {
    public string TextValue { get; set; }
}





<MudSelect @bind-Value="_selectedAssignedPerson" Label="Assigned Person" FullWidth="_fullWidth" FitContent="_fitContent" Variant="Variant.Outlined" Clearable>
    @foreach (var author in _user)
    {
        <MudSelectItem Value="@author">@author</MudSelectItem>
    }
</MudSelect>



@code {
    //TODO: value from user-database
    private bool _fullWidth;
    private bool _fitContent;
    private string? _selectedAssignedPerson;
    private readonly string[] _user =
    [
        "Konatsu", "Max", "Philip", "Margarethe", "Gabriel",

    ];
}

<MudGrid>
    <MudItem xs="12">
        <MudField Label="Severity" Variant="Variant.Outlined" InnerPadding="false">
            <MudRadioGroup T="string">
                <MudRadio T="string">low</MudRadio>
                <MudRadio T="string">medium</MudRadio>
                <MudRadio T="string">high</MudRadio>
                <MudRadio T="string">critical</MudRadio>
            </MudRadioGroup>
        </MudField>
    </MudItem>
</MudGrid>

<MudTextField T="string" Label="Description" Variant="Variant.Outlined" Text="@description" Lines="10" />

@code
{
    string description = "";
}

<MudDatePicker Label="Ticket created" @bind-Date="_createdDate" ReadOnly="true" />
@code {
    private DateTime? _createdDate = DateTime.Today;
}

<MudDatePicker Label="Date to Resolve" Editable="true" @bind-Date="_solveDate" Placeholder="Date to resolve" />
@code {
    private DateTime? _solveDate = DateTime.Today;
}

<MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Save" Color="Color.Info" Size="Size.Medium">Save</MudButton>
